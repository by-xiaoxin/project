
.message {
	width: 100%;
	background-color: #F5F5F5;
	display: inline-block;
}
.message_content {
	width: 100%;
	background-color: #Fff;
	margin: 20rpx 0rpx;
}
.message_head {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 2rpx solid #F5F5F5;
}
.message_left {
	padding-left: 20rpx;
	color: #BEBEBE;
	float: left;
	font-size: 30rpx;
}
.message_right {
	padding-right: 25rpx;
	color: #F66A08;
	float: right;
	font-size: 28rpx;
}
.message_centre {
	width: 96%;
	height: 150rpx;
	border-bottom: 2rpx solid #F5F5F5;
	margin: auto;
	padding: 20rpx 0rpx;
}
.message_image {
	width: 20%;
	height: 150rpx;
	float: left;
	padding: 0rpx 20rpx;
}
.message_image image {
	width: 100%;
	height: 150rpx;
}
.message_01 {
	float: left;
	width: 50%;
	height: 150rpx;
}
.message_upa {
	font-size: 33rpx;
	padding-top: 23rpx;
}
.message_belowb {
	font-size: 28rpx;
	color: #B5B4AF;
	padding-top: 15rpx;
}
.message_02 {
	float: left;
	width: 20%;
	height: 150rpx;
}
.message_upc {
	width:100%;
	height:40rpx;
	float: right;
	padding-top: 22rpx;
	font-size: 29rpx;
	color: #B5B4AF;
	padding-bottom: 22rpx;
	text-align:right;
}
.message_belowd {
	text-align:right;
	width:100%;
	height:30rpx;
	float: right;
	font-size: 28rpx;
	color: #B5B4AF;
	line-height:30rpx;
}
.message_total {
	font-size: 30rpx;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 49%;
}
.message_trail {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
}
.message_logistics {
	float: right;
	border: 1rpx solid #E6E8EB;
	font-size: 28rpx;
